<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<link href='http://fonts.googleapis.com/css?family=Quicksand:300,400' rel='stylesheet' type='text/css'>
		<link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:700' rel='stylesheet' type='text/css'>
		<link rel="stylesheet" href="/css/style.css">
		<!--[if lt IE 9]>
			<script src="/js/lib/html5shiv.js"></script>
		<![endif]-->
	</head>
	<body>
		<div id="page-abs">
			<div id="page-wrapper">
				<div id="content-wrap">
					<header id="header">
						<div id="logo-wrap">
							<h1 id="logo">PHOTOGRAPHY AND FILM: TIM HUSSIN</h1>
						</div>
						<nav id="main-nav">
							<ul>
								<%= build(@menu) %>
							</ul>
						</nav>
						<nav id="sub-menu">
							<ul id="photography">
								<%= build(@photo_menu) %>
							</ul>
							<ul id="video">
								<%= build(@video_menu) %>
							</ul>
						</nav>
					</header>
						<%= yield %>
					</div>
				<div class="" id="gallery-nav-wrap">
					<div id="gallery-nav">
						<div id="next"></div>
						<div id="prev"></div>
					</div>
				</div>
			</div>
		</div>
		<div id="index-bg">
			<img src=<%= @photo %> />
		</div>
  	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  	<script type="text/javascript">
        if (typeof jQuery == 'undefined') {
          document.write(unescape("%3Cscript src='/js/lib/jquery/jquery-1.8.3.min.js' type='text/javascript'%3E%3C/script%3E"));
        }
    </script>
    <script type="text/javascript" src="/js/lib/history/jquery.history.js"></script>
		<script src="/js/script.js"></script>
	</body>
</html>
